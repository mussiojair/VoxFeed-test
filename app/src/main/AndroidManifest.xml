<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mussiocardenas.voxfeed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.VoxFeedActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.CampaignsActivity" />
        <activity
            android:name=".views.activities.CampaignDetailActivity"
            android:label="@string/title_activity_campaign_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.activities.WebActivity"></activity>
    </application>

</manifest>